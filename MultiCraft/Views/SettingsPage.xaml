<Page x:Class="MultiCraft.Views.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MultiCraft.Views"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="1200"
      Title="SettingsPage">

    <Grid Background="#7FA9E4EA">
        <Button x:Name="HideButton" Content="Hide" Click="HideButton_OnClick" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="30" Background="#7FFF0000" Foreground="#CCE0E0E0" BorderBrush="Red"/>
        <TabControl x:Name="SettingsTab" HorizontalAlignment="Center" Height="650" VerticalAlignment="Stretch" Width="1180" Margin="10,35,0,0">
            <TabItem Header="MultiCraft Settings">
                <Grid Background="#CCE5E5E5"/>
            </TabItem>
            <TabItem Header="Launcher Settings">
                <Grid Background="#CCE5E5E5"/>
            </TabItem>
            <TabItem Header="Minecraft Settings">
                <Grid Background="#CCE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
